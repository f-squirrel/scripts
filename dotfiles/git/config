[diff]
    tool = vimdiff3
[difftool "vimdiff3"]
    path = nvim
[merge]
    tool = vimdiff3
[mergetool "vimdiff3"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[mergetool]
    prompt = false
