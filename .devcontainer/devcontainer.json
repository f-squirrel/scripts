{
	// The image version has to be updated manually once the version is updated
	// in buildTools/DOCKER_DEPS_VERSION. Unfortunately, VSCode does not allow using external
	// files for json configs.
	"image": "192.168.1.13:5000/gk8/wallets_ubuntu_build:0.9",
	// This needed for those who like debugging via GUI
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"twxs.cmake",
				"GitHub.vscode-pull-request-github",
				"eamodio.gitlens",
				"znck.grammarly",
				"ms-python.python",
				"ms-vscode.makefile-tools",
				"DavidAnson.vscode-markdownlint",
				"tamasfe.even-better-toml"
			]
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder}/..,target=/wallets,type=bind",
	"workspaceFolder": "/wallets/MyProject",
	// FIXME(DD): This is a dirty trick to allow git working with repo under different users.
	"onCreateCommand": "apt update && apt install -y git && git config --global --add safe.directory /wallets"
}
